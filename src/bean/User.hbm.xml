<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
 
 <hibernate-mapping>
	 <class name="bean.User" table ="users">
	 	<id name="id" column="id_user">
	 	<generator class="increment"></generator>
	 	</id>
	 	<property name="firstName" column="firstName_user"></property>
	 	<property name="lastName" column="lastName_user"></property>
	 	<property name="email" column="email_user"></property>
	    <property name="password" column="password_user"></property>
	    <property name="isAdmin" column="isAdmin_user"></property>
	    
	 	
	 </class>
	 
 </hibernate-mapping>